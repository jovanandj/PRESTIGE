FROM docker.io/continuumio/miniconda3

# Set working directory
WORKDIR /app

# Copy the environment file
COPY ml_evaluation_env.yml .

# Create Conda environment
RUN conda env create -f ml_evaluation_env.yml && \
    conda clean --all --yes && \
    rm -rf /opt/conda/pkgs/*

# Make RUN commands use the new environment
SHELL ["conda", "run", "-n", "ml_evaluation_env", "/bin/bash", "-c"]

# Default command to run when starting the container
ENTRYPOINT ["conda", "run", "--no-capture-output", "-n", "ml_evaluation_env"]
CMD ["python", "evaluate_ml_embedding_models.py"]